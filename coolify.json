{
  "name": "estrategia-viva",
  "description": "Site institucional da Estratégia Viva - Consultoria estratégica em ecossistemas organizacionais vivos",
  "repository": {
    "type": "git",
    "url": "https://github.com/vozdoterreiro/estrategia-viva.git"
  },
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "ports": {
    "expose": 80
  },
  "healthcheck": {
    "test": "wget --no-verbose --tries=1 --spider http://localhost:80/health || exit 1",
    "interval": "30s",
    "timeout": "10s",
    "retries": 3,
    "start_period": "10s"
  }
}
