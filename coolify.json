{
  "name": "estrategia-viva",
  "description": "Site institucional da Estratégia Viva - Consultoria estratégica em ecossistemas organizacionais vivos",
  "repository": {
    "type": "git",
    "url": "https://github.com/vozdoterreiro/estrategia-viva.git"
  },
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "deploy": {
    "port": 80,
    "healthcheck": {
      "path": "/health",
      "interval": 30,
      "timeout": 3,
      "retries": 3
    }
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3001"
  },
  "volumes": [
    {
      "name": "estrategia-viva-data",
      "mount": "/app/data"
    }
  ]
}
